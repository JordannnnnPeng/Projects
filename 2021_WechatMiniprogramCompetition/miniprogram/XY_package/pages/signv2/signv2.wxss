/* pages/signv2/signv2.wxss */
page{
  margin: 0; /*外边距*/
  padding: 0; /*内边距*/
  box-sizing: border-box; /*盒大小规定*/
  font-family: sans-serif; /*字体*/
}
.box{
  display: flex; /*弹性盒模型*/
  justify-content: center;
  align-items: center;
  min-height: 110vh; /*最小高度*/
  background-color: #f7f3e9; /*背景颜色*/
  width: 100%;
}
.container{
  position: relative; /*相对定位*/
  display: flex; 
  justify-content: center; 
  align-items: center; 
  width: 75%; 
  margin-bottom: 70%;
  /* margin-top: -70rpx; */
}
.container .card{
  width: 100%;
  height: 100%;
  margin: 20px;
  padding: 40px 30px;
  border-radius: 40px; /*边框圆角*/
  background-color: #f7f3e9;
  box-shadow:-6px -6px 20px #f7f1e2, 
              6px 6px 20px rgba(0, 0, 0, .1);
}
.container .card:hover{ /*悬停时*/
  box-shadow: inset -6px -6px 20px #f7f1e2, /*改为内部阴影*/
              inset 6px 6px 20px rgba(0, 0, 0, 0.05);
}
.container .card .imgBx{
  position: relative;
  text-align: center; /*文字居中*/
}

.container .card .content{
  text-align: center;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.container .card .content .icon{
  padding: 10px;
  margin-top:15px;
  height: 100%;
  width: 120%;
  border-radius: 40px;
  color: #32a3b1;
  font-size: 16px;
  text-decoration: none; /*字体效果*/
  box-shadow:  -4px -4px 15px #f7f1e2,
      4px 4px 15px rgba(0, 0, 0, 0.1);
}
.container .card .content .icon image{
width: 100%;
}
.container .card .content .bt{
  display: inline-block; /*行内块模型*/
  padding: 10px 20px;
  margin-top:45px;
  border-radius: 40px;
  color: #e1701a;
  font-size: 16px;
  text-decoration: none; /*字体效果*/
  box-shadow:  -4px -4px 15px #f7f1e2,
      4px 4px 15px rgba(0, 0, 0, 0.1);
}
.container .card .content .bt:hover{
  box-shadow: inset -4px -4px 10px #f7f1e2,
          inset 4px 4px 10px rgba(0, 0, 0, 0.1);
}
.container .card .bt:hover .title{
  display: block; /**/
  transform: scale(0.98);
}
.container .card:hover .imgBx,
.container .card:hover .content{ /**/
  transform: scale(0.98); /**/
}

.calendar {
  padding-top: 10px;
}
.calendar-header{
  font-size: large;
  color: #e1701a;
}
.calendar-board{
  color: #e1701a;
}
  