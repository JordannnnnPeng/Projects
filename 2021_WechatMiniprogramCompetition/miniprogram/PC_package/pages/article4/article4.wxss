.all {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 100%;
  height: 250vh;
}
.top_bar{
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 100%;
  background: #ffffff;
  /* border-bottom: 1px solid #E4E4E4; */
}
.midian_bar{
  display: flex;
  align-items: center;
  height: 50rpx;
  width: 100%;
  background: #ffffff;
  /* border-bottom: 1px solid #E4E4E4; */
}
.back{
  
  transform: scale(0.1);
  width: 2%;
}
.top_text{
  display: flex;
  font-size: medium;
  width: 22%;
  margin: auto;
  
}
