  margin-left: 35rpx;
 
  font-size: 15px;
  font-weight:bold
}

.item_type {
  /* flex: 1; */
  display: flex;
  height: 25%;
  margin-top: 10rpx;
}

.item_type_icon {
  height: 40rpx;
  width: 40rpx;
  margin-left: 25rpx;

}

.item_type_name {
  margin-left: 35rpx;
  font-size: small;
  color: #8a8a8a;
}

.item_time {
  /* flex: 1; */
  display: flex;
  height: 100%;
  align-items: center;
  margin-top: 10rpx;

  
}

.item_time_icon {
  height: 40rpx;
  width: 40rpx;
  margin-left: 25rpx;

}

.item_time_text {
  margin-left: 35rpx;
  font-size: small;
  color: #8a8a8a;
}

.plus_image{
  display: flex;
  height: 90rpx;
  width: 30%;
  margin: auto;
  border: 1rpx solid rgb(228, 225, 225);
  align-items: center;
  justify-content: center;
  border-radius: 1em;
  color: #8a8a8a;
  font-size: small;
  margin-top: 10%;
}
.plus_image image{
  transform: scale(0.17);
}
