.all {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 100%;
  height: 150vh;
}
.top_section {
  /* box-shadow:1px 1px 6px #9e9e9e; */
  display: flex;
  height: 250rpx;
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #E4E4E4;
  align-items: center;
}

.greeting {
  margin: auto;
  text-align: center;
  /* vertical-align: middle; */
  font-weight: 700;
  margin-right: 10.5em;
}

.icon_user {
  height: 50rpx;
  width: 50rpx;
  margin-left: 15rpx;
}

.date {
  display: flex;
  height: 120rpx;
  width: 100%;
  align-items: center;
  background-color: white;
  margin-top: 4%;
}

.datee {
  margin-left: 5%;
  font-size: large;
}
.list{
  width: 40rpx;
  height: 40rpx;
  margin-left: 67%;
}
.item {
  display: flex;
  height: 190rpx;
  align-items: center;
  margin-bottom: 20rpx;
}
