/* pages/night/night.wxss */
page {
  background-color: #070324;
}
.v1 {
  align-items: center;
  height: 1040rpx;
}
.pic_main {
  width: 100%;
  /* margin-bottom: 50rpx; */
}
.all {
  /* border: solid 1rpx grey; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
  bottom: 300rpx;
}
.all_words {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* position: relative; */
}
.cover {
  margin-top: 10rpx;
  position: relative;
}
.cover .cover_img {
  width: 200rpx;
  height: 110rpx;
}
.info {
  /* border: solid 1rpx grey; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* position: absolute; */
  position: relative;
  
}
.info .intro_box {
  display: flex;
  align-items: center;
  justify-content: center;  
  text-align: center；
}
.info .txt {
  font-size: small;
  color: white;
}
.info .sound_icon {
  padding-right: 10rpx;
  padding-top: 13rpx;
  width: 28rpx;
  height: 28rpx;
}
.title {
  display: flex;
  position: relative;
  /* position: absolute; */
  
}
.title .txt{
  font-size: 1.5em;
  color: white;
  font-style: bold;
}
 
/* 第二部分 */
.container .box1 {
  display: flex;
  height: 200rpx;
  background-color: #031542;
  margin-bottom: 40rpx;
  align-items: center;
  border-radius: 1em;
}
.container .box2 {
  display: flex;
  height: 200rpx;
  background-color: #031542;
  margin-bottom: 20rpx;
  /* color: red; */
  /* border: 5rpx solid rgb(228, 225, 225); */
  align-items: center;
  border-radius: 1em;
}
.container .sub_title {
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  margin-left: 21rpx;
  margin-top: 40rpx;
}
.container .sub_title .txt {
  color: white;
  font-style: bold;
  font-size: large;
}
.container .words {
  justify-content: space-between;
  /* border:solid 1rpx grey; */
  margin-left: 40rpx;
}
.container .box2 .words .icon {
  height: 28rpx;
  width: 28rpx;
}
.container .box2 .label {
  margin-top: 5rpx;
  margin-right: 10rpx;
}
.box1 .pic {
  width: 230rpx;
  height: 200rpx;
  margin-left: auto;
  border-radius: 1em;
}
.box2 .pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 1em;
  margin-left: auto;
}
.gif {
  width: 100%;
  /* border-radius: 1em; */
}
.container .words .space {
  margin-top: 1em;
  margin-bottom: 1em;
}
.container .words .words_up {
  /* font-size: small; */
  font-style: bold;
  color: white;
}
.container .words .words_down {
  font-size: small;
  color: white;
}